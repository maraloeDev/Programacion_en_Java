-- Archivo: registro_personas.sql

-- Crear tabla personas
CREATE TABLE IF NOT EXISTS personas (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    nombre TEXT NOT NULL,
    edad INTEGER NOT NULL
);

-- Ejemplos de inserciones
INSERT INTO personas (nombre, edad) VALUES ('Juan Pérez', 28);
INSERT INTO personas (nombre, edad) VALUES ('Ana Gómez', 34);
INSERT INTO personas (nombre, edad) VALUES ('Carlos Ruiz', 22);
